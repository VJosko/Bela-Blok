<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PostavkeActivity">

    <TextView
        android:id="@+id/duplo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dupli bodovi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>
    <CheckBox
        android:id="@+id/cb_duplo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/duplo"
        app:layout_constraintBottom_toBottomOf="@id/duplo"
        android:layout_marginTop="16dp"/>


    <TextView
        android:id="@+id/bodovi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bodovi za pobjedu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/duplo"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>
    <CheckBox
        android:id="@+id/cb_bodovi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/bodovi"
        app:layout_constraintBottom_toBottomOf="@id/bodovi"
        android:layout_marginTop="16dp"/>


    <TextView
        android:id="@+id/ekran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ne gasi ekran"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bodovi"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>
    <CheckBox
        android:id="@+id/cb_ekran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ekran"
        app:layout_constraintBottom_toBottomOf="@id/ekran"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>